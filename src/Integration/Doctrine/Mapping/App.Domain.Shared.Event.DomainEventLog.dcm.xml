<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Shared\Event\DomainEventLog" table="domain_event_log">
        <indexes>
            <index name="idx_aggregate" columns="aggregate_type, aggregate_id" />
            <index name="idx_processed" columns="processed, occurred_at" />
        </indexes>
        <id name="id" type="bigint" column="id">
            <generator strategy="AUTO" />
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        <field name="aggregateId" type="string" column="aggregate_id" length="64" />
        <field name="aggregateType" type="string" column="aggregate_type" length="255" />
        <field name="eventType" type="string" column="event_type" length="255" />
        <field name="payload" type="json" />
        <field name="occurredAt" type="datetime_immutable" column="occurred_at" precision="6">
            <options>
                <option name="comment">When the event occurred</option>
            </options>
        </field>
        <field name="processed" type="boolean" column="processed">
            <options>
                <option name="default">false</option>
            </options>
        </field>
        <field name="processedAt" type="datetime_immutable" column="processed_at" precision="6" nullable="true">
            <options>
                <option name="comment">When the event was processed</option>
            </options>
        </field>
    </entity>
</doctrine-mapping>
