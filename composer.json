{
  "name": "slim/skeleton",
  "type": "project",
  "license": "Bright PHP",
  "description": "A mini framework using Slim 4 and utilising ddd, clean architecture hexagonal design.",
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.3",
    "symfony/uid": "^6.3",
    "odan/session": "^6.1",
    "symfony/console": "^6.3",
    "doctrine/orm": "^2.15",
    "symfony/cache": "^6.3",
    "slim/flash": "^0.4.0",
    "symfony/validator": "^6.4",
    "symfony/translation": "^6.4",
    "ext-pdo": "*",
    "doctrine/migrations": "^3.9",
    "mezzio/mezzio-authorization-rbac": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "selective/test-traits": "^4.1"
  },
  "scripts": {
    "test": "phpunit"
  }
}
